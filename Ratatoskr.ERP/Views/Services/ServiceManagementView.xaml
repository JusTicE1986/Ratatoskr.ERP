<UserControl x:Class="Ratatoskr.App.Views.Services.ServiceManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign ="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:Ratatoskr.App.ViewModels.Services"
             xmlns:helpers="clr-namespace:Ratatoskr.App.Helpers"
             mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="0 10 0 10">
                <TextBlock Text="Leistung suchen:" Margin="10 0 10 0"/>
                <TextBox Width="200" Margin="0 0 10 0"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Bezeichnung, Nummer, Beschreibung"/>

                <Button Command="{Binding ResetFiltersCommand}" Margin="10 0 0 0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="CloseCircleOutline" Width="16" Height="16"/>
                        <TextBlock Text="Filter zurücksetzen" Margin="5 0 5 0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </ToolBar>
        <ToolBar Grid.Row="1" Padding="5">
            <Button Command="{Binding CreateNewServiceCommand}" Margin="0 0 10 0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Plus" Width="16" Height="16"/>
                    <TextBlock Text="Neue Leistung" Margin="5 0 5 0"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding EditServiceCommand}" Margin="0 0 10 0"
                    IsEnabled="{Binding SelectedService, Converter={StaticResource NullToBoolConverter}}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16"/>
                    <TextBlock Text="Bearbeiten" Margin="5 0 5 0"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding LoadDataCommand}" Margin="0 0 10 0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16"/>
                    <TextBlock Text="Aktualisieren" Margin="5 0 5 0"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding DeleteServiceCommand}" Margin="0 0 10 0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                    <TextBlock Text="Löschen" Margin="5 0 5 0"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding ToggleDetailsCommand}" Margin="0 0 10 0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="{Binding IsDetailVisible, Converter={StaticResource BoolToIconConverter}}" Width="16" Height="16"/>
                    <TextBlock Text="{Binding IsDetailVisible, Converter={StaticResource BoolToTextConverter}}" Margin="5 0 5 0"/>
                </StackPanel>
            </Button>
        </ToolBar>
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="500"/>
                </Grid.ColumnDefinitions>
                <DataGrid Grid.Column="0"
                          ItemsSource="{Binding Services}"
                          SelectedItem="{Binding SelectedService, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="0 0 0 10"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          MaxHeight="550"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Art.-Nr." Binding="{Binding ArticleNumber}" Width="100"/>
                        <DataGridTextColumn Header="Bezeichnung." Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Einheit" Binding="{Binding Unit}" Width="80"/>
                        <DataGridTextColumn Header="Netto €" Binding="{Binding PriceNet}" Width="80"/>
                        <DataGridTextColumn Header="MwSt" Binding="{Binding TaxRateEnum}" Width="80"/>
                        <DataGridTextColumn Header="Typ" Binding="{Binding ServiceType}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Grid.Column="1" Margin="0 20 0 0">
                    <materialDesign:Card Visibility="{Binding IsDetailVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                         Padding="20" Margin="0 10 0 0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="{Binding FormTitle}" FontSize="18" FontWeight="Bold" Margin="0 0 10 0"/>

                                <TextBox Margin="0 5" Width="300"
                                         Text="{Binding CurrentServiceForm.Name, Mode=TwoWay}"
                                         materialDesign:HintAssist.Hint="Bezeichnung"
                                         IsReadOnly="{Binding IsInputDisabled}"/>

                                <TextBox Margin="0 5" Width="300"
                                         Text="{Binding CurrentServiceForm.Description, Mode=TwoWay}"
                                         materialDesign:HintAssist.Hint="Beschreibung"
                                         IsReadOnly="{Binding IsInputDisabled}"/>

                                <ComboBox Margin="0 5" Width="300"
                                          ItemsSource="{Binding ServiceTypes}"
                                          SelectedItem="{Binding CurrentServiceForm.ServiceType}"
                                          materialDesign:HintAssist.Hint="Typ"
                                          IsEnabled="{Binding IsInputDisabled, Converter={StaticResource InverseBooleanConverter}}"/>

                                <ComboBox Margin="0 5" Width="300"
                                          ItemsSource="{Binding TaxRates}"
                                          SelectedItem="{Binding CurrentServiceForm.TaxRateEnum}"
                                          materialDesign:HintAssist.Hint="Steuersatz"
                                          IsEnabled="{Binding IsInputDisabled, Converter={StaticResource InverseBooleanConverter}}"/>

                                <TextBox Margin="0 5" Width="300"
                                         Text="{Binding CurrentServiceForm.PriceNet, Mode=TwoWay, StringFormat=N2}"
                                         materialDesign:HintAssist.Hint="Nettopreis"
                                         IsReadOnly="{Binding IsInputDisabled}"/>

                                <ComboBox Margin="0 5" Width="300"
                                          ItemsSource="{x:Static helpers:UnitValues.All}"
                                          SelectedItem="{Binding CurrentServiceForm.Unit}"
                                          materialDesign:HintAssist.Hint="Einheit"
                                          IsEnabled="{Binding IsInputDisabled, Converter={StaticResource InverseBooleanConverter}}"/>

                                <StackPanel Orientation="Horizontal" Margin="0 10 0 0"
                                            Visibility="{Binding IsInputDisabled, Converter={StaticResource InverseBooleanConverter}}">
                                    <Button Content="💾 Speichern" Command="{Binding SaveServiceCommand}" Margin="0 0 10 0"/>
                                    <Button Content="❌ Abbrechen" Command="{Binding CancelCommand}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </materialDesign:Card>
                </Grid>
                
            </Grid>
        </ScrollViewer>
        
    </Grid>
</UserControl>
